@*
@if (selectedRepo != null)
{
    <Panel Title="Recent Commits" BorderColor="@Color.Grey">
        @foreach (var commit in await GitHubService.GetRecentCommits(selectedRepo))
        {
            <Markup Content="@commit.Message" Foreground="@Color.Grey70" />
            <Markup Content="@($"Author: {commit.Author}")" Foreground="@Color.Grey50" />
            <Markup Content="@($"Date: {commit.Date}")" Foreground="@Color.Grey50" />
            <Newline />
        }
    </Panel>
}

